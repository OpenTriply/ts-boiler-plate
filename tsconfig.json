{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "declaration": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "removeComments": true,
        "rootDir": "./src",
        "sourceMap": true,
        "listFiles": false,
        "outDir": "./build",
        "experimentalDecorators": true,
        "baseUrl": "./src"
    },
    "compileOnSave": true,
    "files": ["./src/index.ts"]
}
